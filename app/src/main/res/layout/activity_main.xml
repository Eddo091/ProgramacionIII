<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TabWidget>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="788dp">

                <LinearLayout
                    android:id="@+id/PestaÃ±aPrincipal"
                    android:layout_width="480dp"
                    android:layout_height="854dp"
                    android:addStatesFromChildren="false"
                    android:clickable="false"
                    android:clipChildren="false"
                    android:keepScreenOn="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblvalor"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"

                        android:lineSpacingExtra="8sp"
                        android:text="@string/inserte_valor"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:typeface="serif"
                        app:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/txtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:hint="@string/_0"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal" />

                    <RadioGroup
                        android:id="@+id/RbG"
                        android:layout_width="222dp"
                        android:layout_height="150dp">

                        <RadioButton
                            android:id="@+id/RbEsme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/esmeraldas" />

                        <RadioButton
                            android:id="@+id/RbZaf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/zafiro" />

                        <RadioButton
                            android:id="@+id/RbRubi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rub" />

                        <RadioButton
                            android:id="@+id/RbCoins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/depcoin" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/lblRespuesta"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:lineSpacingExtra="24sp"
                        android:text="@string/respuesta"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="italic"
                        android:typeface="sans"
                        app:fontFamily="sans-serif-black" />

                    <Button
                        android:id="@+id/BtnProcesar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/btnProcesar" />

                </LinearLayout>

            <LinearLayout
                android:id="@+id/ConversorSuperficie"
                android:layout_width="match_parent"
                android:layout_height="359dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtValor"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="24sp"
                    android:text="@string/ingrese_valor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="24sp"
                    android:typeface="sans"
                    app:fontFamily="sans-serif" />


                <TextView
                    android:id="@+id/txtResultado"
                    android:layout_width="125dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/Respuesta" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="142dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="10dp"

                    android:text="1" />

                <Spinner
                    android:id="@+id/cboUno"
                    android:layout_width="357dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <Spinner
                    android:id="@+id/cboDos"
                    android:layout_width="361dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/BtnProc"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/convierte" />

            </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>