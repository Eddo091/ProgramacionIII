<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="788dp">

                <LinearLayout
                    android:id="@+id/PestañaPrincipal"
                    android:layout_width="360dp"
                    android:layout_height="270dp"
                    android:addStatesFromChildren="false"
                    android:clickable="false"
                    android:clipChildren="false"
                    android:keepScreenOn="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblvalor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/inserte_valor"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:typeface="serif"
                        app:fontFamily="sans-serif" />


                    <TextView
                        android:layout_width="328dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:="@+id/txtCantida"
                        android:text="@string/Cantida" />


                    <TextView
                        android:id="@+id/txtUnidad1"
                        android:layout_width="324dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/Unidad1" />

                    <TextView
                        android:id="@+id/textUnidad2"
                        android:layout_width="326dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/Unidad2" />

                    <Button
                        android:id="@+id/BtnProcesar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="70dp"
                        android:text="@string/btnProcesar" />
                   /Diseño...

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ConversorSuperficie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtValor"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:lineSpacingExtra="24sp"
                        android:text="@string/ingrese_valor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:typeface="sans"
                        app:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/txtnum2"
                        android:layout_width="416dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/_00"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal" />

                    <RadioGroup
                        android:id="@+id/RGSuperficie"
                        android:layout_width="378dp"
                        android:layout_height="252dp">

                        <RadioButton
                            android:id="@+id/RbPieCuad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/pie_cuadrado" />

                        <RadioButton
                            android:id="@+id/RbVaraCua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vara_cuadrada" />

                        <RadioButton
                            android:id="@+id/RbYardaCua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/yarda_cuadrada" />

                        <RadioButton
                            android:id="@+id/RbMetroCua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/metro_cuadrado" />

                        <RadioButton
                            android:id="@+id/RbTareas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tareas" />

                        <RadioButton
                            android:id="@+id/RbManzana"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/manzana" />

                        <RadioButton
                            android:id="@+id/RbHecta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hectar_as" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/txtRes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="24sp"
                        android:text="@string/respuestaa"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:typeface="sans"
                        app:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/BtnProc"
                        android:layout_width="206dp"
                        android:layout_height="wrap_content"
                        android:text="@string/convierte" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>